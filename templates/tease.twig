<a href="{{post.link}}" data-cursor-text="view"
	class="col-md-6 col-lg-4 p-md-0 grid-item hoverable {{ post.terms('case-study-type')|join(' ') }}">
	<div class="work-item">
		<div class="work-color"></div>
		{% if post.get_thumbnail %}
		<img class="img-fluid" src="{{post.thumbnail.src}}" alt="{{post.title}}" />
		{% endif %}
		<div class="work-desc">
			<h3>{{post.title}}</h3>
			<span>{{ post.post_excerpt| truncate(10) }}</span>
		</div>
	</div>
</a>
