<div class=" section-color number-about">
    <div class="half-line before-lines"></div>
    <div class="wrap-lines container">
        <div class="row no-gutters">
            <div class="col-3 liner"></div>
            <div class="col-3 liner"></div>
            <div class="col-3 liner"></div>
            <div class="col-3 liner"></div>
        </div>
    </div>
    <div class="half-line after-lines"></div>
    <div class="container">
        <div class="row">
            {% for i, chiffre in bloc.chiffres %}
                <div class="col-md-3 pl-0">
                    <div class="number">
                        <p data-number="{{ chiffre.nombre }}">0</p>
                    </div>
                    <div class="number-title">
                    <p>{{ chiffre.titre }}</p>
                    </div>
                    <div class="number-desc">
                        <p>{{ chiffre.description }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>